  editor = vim
  excludesfile = ~/.gitignore
[alias]
  ci = commit
  co = checkout
  st = status --short
  br = branch
  frob = !git rebase -i "$(git merge-base @ origin/master)"
  green = !git co "$(script/ci_last_green_master)"
[push]
  default = simple
[pull]
  rebase = true
