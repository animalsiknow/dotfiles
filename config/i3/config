set $background #fbf8ef
set $foreground #655370
set $darkblack #100a14
set $black #100a14
set $darkred #eed9d2
set $red #f2241f
set $darkgreen #67b11d
set $green #edf2e9
set $darkyellow #b1951d
set $yellow #f6f1e1
set $darkblue #3a81c3
set $blue #edf1ed
set $darkmagenta #a31db1
set $magenta #a31db1
set $darkcyan #2d9574
set $cyan #edf2e9
set $darkwhite #e3dedd
set $white #fbf8ef

bar {
  status_command i3status
  position top
  separator_symbol "  "

  colors {
    background $background
    statusline $foreground
    separator $darkwhite

    focused_workspace $background $background $magenta
    active_workspace $background $background $green
    inactive_workspace $background $background $darkwhite
    urgent_workspace $background $background $red
  }
}
